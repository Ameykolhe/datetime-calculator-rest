<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
	
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name = "hibernate.connection.url">jdbc:postgresql://localhost/datetimecalculator</property>   
		<property name = "hibernate.connection.username">ameyk</property>
		<property name = "hibernate.connection.password">1379</property>
		
		<property name = "hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		
		<!-- JDBC connection pool (use the build-in) -->
		<property name="connection.pool_size">1</property>
		
		<!-- Set "true" to show SQL statements -->
		<property name="hibernate.show_sql">true</property>
		
		<!-- thread is the short name for org.hibernate.context.ThreadLocalSessionContext -->
		<property name="current_session_context_class">thread</property>
		
	</session-factory>
</hibernate-configuration>